@model RegisterViewModel
<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css" />
</head>
<div class="form">
    <form asp-controller="Auth" asp-action="Register" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="header">Sign Up</div>
        <div class="block">
            <div>
                <label>Name</label>
                <input asp-for="Name" class="input" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="block">
            <div>
                <label>Surname</label>
                <input asp-for="Surname" class="input" />
                <span asp-validation-for="Surname"></span>
            </div>
        </div>
        <div class="block">
            <div>
                <label>Username</label>
                <input asp-for="Username" class="input" />
                <span asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="block">
            <div>
                <label>Password</label>
                <input asp-for="Password" class="input" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="block">
            <div>
                <label>Confirm password</label>
                <input asp-for="ConfirmPassword" class="input" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <div class="block">
            <button type="submit" class="button">Sign up</button>
        </div>
        <div class="block">
            <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl"
               class="switch-button">Login</a>
        </div>
    </form>
</div>